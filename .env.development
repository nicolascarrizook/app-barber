# Development Environment Variables
# Copy this file to .env for local development

# Database
DATABASE_URL="postgresql://barbershop_user:barbershop_password@localhost:5432/barbershop?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# JWT
JWT_SECRET="dev-secret-key-change-in-production"
JWT_EXPIRATION="7d"
JWT_REFRESH_EXPIRATION="30d"

# API
API_PORT=3000
API_URL="http://localhost:3000"
API_PREFIX="api"

# Web App
NEXT_PUBLIC_API_URL="http://localhost:3000"

# MercadoPago (use test credentials)
MERCADOPAGO_ACCESS_TOKEN="TEST-your-test-access-token"
MERCADOPAGO_PUBLIC_KEY="TEST-your-test-public-key"

# Resend (Email)
RESEND_API_KEY="re_dev_your-resend-api-key"
RESEND_FROM_EMAIL="noreply@barbershop-dev.com"

# Environment
NODE_ENV="development"

# Logging
LOG_LEVEL="debug"

# CORS
CORS_ORIGIN="http://localhost:3001,http://localhost:3002"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET="dev-session-secret"

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"
