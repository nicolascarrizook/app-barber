{
  "name": "@barbershop/infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "Infrastructure layer - Repositories, external services, caching",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
