# Test Environment Variables
# Used for automated testing

# Database (separate test database)
DATABASE_URL="postgresql://barbershop_user:barbershop_password@localhost:5432/barbershop_test?schema=public"

# Redis (separate test instance or different DB)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=1

# JWT
JWT_SECRET="test-secret-key"
JWT_EXPIRATION="1h"
JWT_REFRESH_EXPIRATION="1d"

# API
API_PORT=3100
API_URL="http://localhost:3100"
API_PREFIX="api"

# Web App
NEXT_PUBLIC_API_URL="http://localhost:3100"

# MercadoPago (mock in tests)
MERCADOPAGO_ACCESS_TOKEN="TEST-mock-token"
MERCADOPAGO_PUBLIC_KEY="TEST-mock-public-key"

# Resend (mock in tests)
RESEND_API_KEY="re_test_mock-api-key"
RESEND_FROM_EMAIL="test@barbershop-test.com"

# Environment
NODE_ENV="test"

# Logging
LOG_LEVEL="error"

# CORS
CORS_ORIGIN="*"

# Rate Limiting (disabled for tests)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10000

# Session
SESSION_SECRET="test-session-secret"

# File Upload
MAX_FILE_SIZE=1048576
ALLOWED_FILE_TYPES="image/jpeg,image/png"
